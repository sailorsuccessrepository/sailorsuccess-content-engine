---
import Layout from '../ui/layouts/Layout.astro';

const problems = [
  {
    icon: '‚è≥',
    title: 'Experience Wasted',
    description: '20 years of sea wisdom retires and vanishes forever.',
    color: 'border-red-500'
  },
  {
    icon: 'üïµÔ∏è',
    title: 'Freshers Clueless',
    description: 'No real guidance, just generic internet advice and marketing noise.',
    color: 'border-gray-500'
  },
  {
    icon: 'üèóÔ∏è',
    title: 'SailorGPT Bridges',
    description: '120 years of collective experience, accessible 24/7.',
    color: 'border-red-400'
  }
];

const paths = [
  {
    title: 'For Maritime Legends',
    subtitle: 'Share your wisdom',
    items: [
      'Contribute case studies and real incidents',
      'Review technical guides for accuracy',
      'Mentor the next generation of seafarers',
      'Build a legacy that lives in SailorGPT'
    ],
    cta: 'Contribute Your Wisdom',
    link: 'https://docs.google.com/forms/d/e/1FAIpQLScQXMHYgM3yRZC7ZifBdovWoE2TCqKUVhcCVj2hBiGhXg/viewform',
    color: 'red'
  },
  {
    title: 'For Young Seafarers',
    subtitle: 'Learn from the best',
    items: [
      'Access examiner-style reasoning',
      'Get answers to complex shipboard issues',
      'Avoid expensive career mistakes',
      '24/7 AI mentor trained on real sea time'
    ],
    cta: 'Ask SailorGPT',
    link: 'https://sailorsuccess.graphy.com/talk/mentor',
    color: 'gray'
  }
];
---

<Layout title="Contributors | Sailor Success" description="Join India's maritime legends in training SailorGPT. Share your sea experience and mentor the next generation.">
  <!-- Hero Section -->
  <section class="relative pt-24 pb-16 overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 text-center relative z-10">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-red-500/10 border border-red-500/20 text-red-400 text-sm font-medium mb-6">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
        </span>
        Trusted by 10,000+ Indian Seafarers
      </div>
      
      <h1 class="text-5xl md:text-7xl font-extrabold text-white tracking-tight mb-6">
        SailorGPT: Your <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-rose-400">Second Brain</span> at Sea
      </h1>
      
      <p class="text-xl text-gray-400 max-w-3xl mx-auto mb-10 leading-relaxed">
        Hundreds of years of collective experience from maritime legends, delivered to young seafarers through India's first focused AI mentor.
      </p>
      
      <div class="flex flex-wrap justify-center gap-4">
        <a href="#contribute" class="px-8 py-4 bg-red-600 hover:bg-red-700 text-white font-bold rounded-2xl transition-all shadow-xl shadow-red-900/20 hover:-translate-y-1">
          Contribute Your Wisdom
        </a>
        <a href="https://sailorsuccess.graphy.com/talk/mentor" target="_blank" class="px-8 py-4 bg-gray-800 hover:bg-gray-700 text-white font-bold rounded-2xl transition-all border border-gray-700 hover:-translate-y-1">
          Ask SailorGPT
        </a>
      </div>
    </div>
    
    <!-- Background Decor -->
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full -z-0 opacity-20 pointer-events-none">
      <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-red-600/30 rounded-full blur-[120px]"></div>
    </div>
  </section>

  <!-- The Problem -->
  <section class="py-20 border-y border-white/5 bg-gray-950/50">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">The Maritime Knowledge Gap</h2>
        <p class="text-gray-400">A vicious cycle that SailorGPT is here to break.</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        {problems.map(p => (
          <div class={`p-8 rounded-3xl bg-gray-900/40 backdrop-blur-xl border-l-4 ${p.color} border-t border-r border-b border-white/5 shadow-xl transition-all hover:-translate-y-2`}>
            <div class="text-4xl mb-4">{p.icon}</div>
            <h3 class="text-xl font-bold text-white mb-3">{p.title}</h3>
            <p class="text-gray-400 leading-relaxed">{p.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience Stats -->
  <section class="py-20 relative">
    <div class="max-w-4xl mx-auto px-4">
      <div class="p-10 rounded-[2.5rem] bg-gradient-to-br from-red-600 to-rose-700 text-center shadow-2xl shadow-red-900/40">
        <h3 class="text-3xl md:text-4xl font-black text-white mb-4">120+ Years of Collective Wisdom</h3>
        <p class="text-red-100 text-lg leading-relaxed">
          From Chief Engineers who survived engine room fires to Captains who navigated pirate waters. Their wisdom lives on in SailorGPT to protect and guide you.
        </p>
      </div>
    </div>
  </section>

  <!-- Choose Your Path -->
  <section id="contribute" class="py-20">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Choose Your Path</h2>
        <p class="text-gray-400 text-lg">Whether you are a legend or a learner, you belong here.</p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-10">
        {paths.map(path => (
          <div class={`p-10 rounded-[2rem] bg-gray-900/60 backdrop-blur-2xl border ${path.color === 'red' ? 'border-red-500/30' : 'border-white/10'} shadow-2xl flex flex-col`}>
            <div class="mb-8">
              <h3 class="text-2xl font-bold text-white mb-1">{path.title}</h3>
              <p class={`text-sm font-semibold uppercase tracking-widest ${path.color === 'red' ? 'text-red-400' : 'text-gray-400'}`}>{path.subtitle}</p>
            </div>
            
            <ul class="space-y-4 mb-10 flex-grow">
              {path.items.map(item => (
                <li class="flex items-start gap-3 text-gray-300">
                  <span class={path.color === 'red' ? 'text-red-500' : 'text-gray-500'}>‚úì</span>
                  {item}
                </li>
              ))}
            </ul>
            
            <a 
              href={path.link} 
              target="_blank"
              class={`w-full py-4 text-center font-bold rounded-2xl transition-all ${
                path.color === 'red' 
                ? 'bg-red-600 hover:bg-red-700 text-white shadow-lg shadow-red-900/20' 
                : 'bg-white/5 hover:bg-white/10 text-white border border-white/10'
              }`}
            >
              {path.cta}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
