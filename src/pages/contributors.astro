---
import BaseLayout from '../ui/layouts/BaseLayout.astro';

const contributors = [
  {
    name: 'Captain (Retd.) R. Sharma',
    role: 'Chief Maritime Editor',
    experience: '28 years at sea · Master Mariner',
    bio: 'Former Master on VLCC tankers with international shipping companies. Now dedicated to helping cadets and junior officers navigate their maritime careers with real-world guidance.',
    badge: 'Master Mariner',
    cta: false
  },
  {
    name: 'Adv. Priya Nair',
    role: 'Maritime Legal Advisor',
    experience: '16 years · MLC & STCW Expert',
    bio: 'Specialises in seafarer rights, MLC 2006 disputes, PI Club claims and flag state regulatory compliance across major maritime jurisdictions.',
    badge: 'Legal Expert',
    cta: false
  },
  {
    name: 'Cmdr. (Retd.) A. Fernandes',
    role: 'Career & Training Guide',
    experience: '22 years · DG Shipping Examiner',
    bio: 'Former Chief Officer who now guides cadets through MMD exams, CDC applications, watchkeeping certificates and career planning at every rank.',
    badge: 'Career Guide',
    cta: false
  },
  {
    name: 'Tanvir Ahmed',
    role: 'Finance & Allotment Specialist',
    experience: '10 years · Maritime HR & Payroll',
    bio: 'Expert in seafarer salary structures, allotment planning, DCRB, income tax exemptions and investment strategies specifically for maritime professionals.',
    badge: 'Finance Expert',
    cta: false
  },
  {
    name: 'Lt. Cmdr. Sunita Rao',
    role: 'Tools & Resources Editor',
    experience: '18 years Merchant Navy',
    bio: 'Created most of the calculators and checklists on SailorSuccess. Passionate about making complex maritime compliance and documentation accessible.',
    badge: 'Resources',
    cta: false
  },
  {
    name: 'You?',
    role: 'Open for Contributors',
    experience: 'Maritime professional with knowledge to share',
    bio: 'We welcome experienced seafarers, maritime lawyers, officers and educators who want to contribute guides, tools or articles to help the global sailor community.',
    badge: 'Join Us',
    cta: true
  }
];
---

<BaseLayout
  title="Our Contributors | Sailor Success"
  description="Meet the experienced maritime professionals and experts who power Sailor Success — dedicated to helping seafarers worldwide."
>

  <!-- Hero Section -->
  <section class="pt-16 pb-12 px-4 text-center bg-gradient-to-b from-gray-900 via-gray-950 to-gray-950">
    <div class="max-w-3xl mx-auto">
      <span class="inline-block px-4 py-1.5 rounded-full text-xs font-semibold uppercase tracking-widest bg-red-600/20 text-red-400 border border-red-500/30 mb-5">
        120+ Years Combined Experience
      </span>
      <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-5 leading-tight">
        The People Behind<br /><span class="text-red-500">Sailor Success</span>
      </h1>
      <p class="text-gray-400 text-lg leading-relaxed max-w-2xl mx-auto">
        Every guide, article and tool on this platform is written or reviewed by a real maritime professional with lived experience at sea and ashore.
      </p>
    </div>
  </section>

  <!-- Contributors Grid -->
  <section class="py-16 px-4 bg-gray-950">
    <div class="max-w-6xl mx-auto">
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {contributors.map(c => (
          <div class={`relative group rounded-2xl border p-6 transition-all duration-300 hover:shadow-xl hover:shadow-red-500/10 ${
            c.cta
              ? 'border-dashed border-red-500/40 bg-red-600/5 hover:bg-red-600/10'
              : 'border-red-500/20 bg-gray-900/60 hover:border-red-500/40 backdrop-blur-sm'
          }`}>

            <!-- Role Badge -->
            <span class="absolute top-4 right-4 text-xs px-2.5 py-0.5 rounded-full bg-red-600/20 text-red-400 border border-red-500/20 font-medium">
              {c.badge}
            </span>

            <!-- Avatar -->
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-red-600/30 to-red-900/30 border-2 border-red-500/30 flex items-center justify-center mb-5">
              {c.cta ? (
                <svg class="w-8 h-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
              ) : (
                <svg class="w-8 h-8 text-red-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 12c2.7 0 4.8-2.1 4.8-4.8S14.7 2.4 12 2.4 7.2 4.5 7.2 7.2 9.3 12 12 12zm0 2.4c-3.2 0-9.6 1.6-9.6 4.8v2.4h19.2v-2.4c0-3.2-6.4-4.8-9.6-4.8z"/>
                </svg>
              )}
            </div>

            <!-- Info -->
            <h3 class="text-lg font-bold text-white mb-1">{c.name}</h3>
            <p class="text-red-400 text-sm font-semibold mb-1">{c.role}</p>
            <p class="text-gray-500 text-xs mb-4">{c.experience}</p>
            <p class="text-gray-300 text-sm leading-relaxed">{c.bio}</p>

            {c.cta && (
              <a
                href="/contact"
                class="mt-5 inline-flex items-center gap-2 px-4 py-2 bg-red-600 hover:bg-red-700 text-white text-sm font-semibold rounded-lg transition-colors"
              >
                Get in Touch
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                </svg>
              </a>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trust Strip -->
  <section class="py-12 px-4 bg-gray-900 border-t border-red-500/10">
    <div class="max-w-4xl mx-auto text-center">
      <p class="text-gray-500 text-sm mb-6 uppercase tracking-widest font-semibold">Why Trust Us</p>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center">
          <p class="text-3xl font-extrabold text-red-500 mb-1">120+</p>
          <p class="text-gray-400 text-sm">Years Combined Experience</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-extrabold text-red-500 mb-1">500+</p>
          <p class="text-gray-400 text-sm">Articles & Guides</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-extrabold text-red-500 mb-1">15+</p>
          <p class="text-gray-400 text-sm">Free Tools</p>
        </div>
        <div class="text-center">
          <p class="text-3xl font-extrabold text-red-500 mb-1">24/7</p>
          <p class="text-gray-400 text-sm">AI Support via SailorGPT</p>
        </div>
      </div>
    </div>
  </section>

</BaseLayout>
