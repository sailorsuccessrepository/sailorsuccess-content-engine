---
import { getCollection } from 'astro:content';
import BaseLayout from '../../ui/layouts/BaseLayout.astro';
export async function getStaticPaths() {
  const articles = await getCollection('tools');
  return articles.map(article => ({ params: { slug: article.slug }, props: { article } }));
}
const { article } = Astro.props;
const { Content, headings } = await article.render();
const { title, description, pubDate, author = 'Sailor Success Team', readTime = '10 min read', tags = [], image } = article.data;
const formattedDate = new Date(pubDate).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' });
const tocItems = headings.filter(h => h.depth <= 3);
const articleUrl = Astro.url.href;
const encodedUrl = encodeURIComponent(articleUrl);
const encodedTitle = encodeURIComponent(title);
---
<BaseLayout {title} {description} canonicalURL={articleUrl}>
  <div class="article-page">
    <div class="sticky-share-bar">
      <span class="share-label">Share</span>
      <a href={`https://wa.me/?text=${encodedTitle}%20${encodedUrl}`} class="share-btn share-whatsapp" target="_blank" rel="noopener" aria-label="WhatsApp"><svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg></a>
    </div>
    <div class="container">
      <nav class="breadcrumbs" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
          <li><a href="/" class="breadcrumb-link">Home</a></li>
          <li><span class="breadcrumb-sep">/</span></li>
          <li><a href="/tools/" class="breadcrumb-link">Tools</a></li>
          <li><span class="breadcrumb-sep">/</span></li>
          <li class="breadcrumb-current" aria-current="page">{title}</li>
        </ol>
      </nav>
      <header class="article-header">
        <h1 class="article-title">{title}</h1>
        {description && <p class="article-description">{description}</p>}
        <div class="article-meta">
          <span class="article-author">By {author}</span>
          <span class="article-sep">·</span>
          <time class="article-date" datetime={new Date(pubDate).toISOString()}>{formattedDate}</time>
          <span class="article-sep">·</span>
          <span class="article-read-time">{readTime}</span>
        </div>
        {tags.length > 0 && <div class="article-tags">{tags.map(tag => <span class="article-tag">{tag}</span>)}</div>}
        {image && <div class="article-hero-image"><img src={image} alt={title} loading="lazy" /></div>}
      </header>
      <div class="article-content">
        <div class="content-main">
          <div class="prose"><Content /></div>
          <div class="article-share-bottom">
            <p class="share-prompt">Found this helpful? Share it:</p>
            <div class="share-buttons">
              <a href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`} class="share-pill share-linkedin" target="_blank" rel="noopener">LinkedIn</a>
              <a href={`https://wa.me/?text=${encodedTitle}%20${encodedUrl}`} class="share-pill share-whatsapp" target="_blank" rel="noopener">WhatsApp</a>
            </div>
          </div>
        </div>
        <aside class="article-sidebar">
          {tocItems.length > 0 && (
            <div class="glass-card toc-card">
              <h3 class="sidebar-heading">Quick Links</h3>
              <nav aria-label="Table of contents">
                <ul class="toc-list" role="list">
                  {tocItems.map(h => <li class={`toc-item toc-h${h.depth}`}><a href={`#${h.slug}`} class="toc-link">{h.text}</a></li>)}
                </ul>
              </nav>
            </div>
          )}
          <div class="glass-card">
            <h3 class="sidebar-heading">Ask SailorGPT</h3>
            <p class="sidebar-text">Have questions? Ask our AI assistant.</p>
            <a href="/sailorgpt/" class="sidebar-cta-btn">Ask SailorGPT</a>
          </div>
          <div class="glass-card">
            <h3 class="sidebar-heading">Talk to Chief</h3>
            <p class="sidebar-text">Get personal guidance from an experienced officer.</p>
            <a href="https://wa.me/919958110235?text=help%20me%20chief" class="sidebar-cta-btn sidebar-cta-whatsapp" target="_blank" rel="noopener">WhatsApp Chief</a>
          </div>
        </aside>
      </div>
    </div>
  </div>
</BaseLayout>
