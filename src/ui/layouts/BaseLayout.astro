---
import Header from '../components/Header.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonicalURL?: string;
}

const {
  title = 'Sailor Success',
  description = 'Your complete maritime career guide ‚Äî 500+ articles, free tools and 24/7 AI support for seafarers worldwide.',
  ogImage = '/images/og-default.jpg',
  canonicalURL = Astro.url.href
} = Astro.props as Props;

const fullTitle = title === 'Sailor Success' ? title : `${title} | Sailor Success`;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta -->
    <title>{fullTitle}</title>
    {description && <meta name="description" content={description} />}
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Sailor Success" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#dc2626" />

    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />
  </head>

  <body class="bg-gray-950 text-gray-100 antialiased min-h-screen" style="font-family: 'Inter', sans-serif;">

    <!-- Fixed Header with hamburger nav -->
    <Header />

    <!-- Page Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 border-t border-red-500/10 py-12 mt-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-10">

          <!-- Brand -->
          <div class="col-span-2 md:col-span-1">
            <a href="/" class="flex items-center gap-2 mb-4">
              <img src="/images/logo.png" alt="Sailor Success" class="h-9 w-auto" onerror="this.style.display='none'" />
              <span class="font-bold text-white text-lg">Sailor<span class="text-red-500">Success</span></span>
            </a>
            <p class="text-gray-500 text-sm leading-relaxed mb-4">Your complete maritime career guide. Free knowledge for every seafarer worldwide.</p>
            <a
              href="https://sailorsuccess.graphy.com/talk/mentor"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-4 py-2 bg-red-600/20 hover:bg-red-600/30 border border-red-500/30 text-red-400 text-sm font-medium rounded-lg transition-colors"
            >
              <span>ü§ñ</span> Try SailorGPT
            </a>
          </div>

          <!-- Knowledge -->
          <div>
            <h3 class="text-white font-semibold text-xs mb-4 uppercase tracking-widest">Knowledge</h3>
            <ul class="space-y-2.5">
              <li><a href="/learn" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Learn</a></li>
              <li><a href="/careers" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Careers</a></li>
              <li><a href="/rights" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Rights</a></li>
              <li><a href="/encyclopedia" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Encyclopedia</a></li>
              <li><a href="/blog" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Blog</a></li>
            </ul>
          </div>

          <!-- Resources -->
          <div>
            <h3 class="text-white font-semibold text-xs mb-4 uppercase tracking-widest">Resources</h3>
            <ul class="space-y-2.5">
              <li><a href="/tools" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Tools</a></li>
              <li><a href="/money" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Money</a></li>
              <li><a href="/finance" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Finance</a></li>
              <li><a href="https://sailorsuccess.graphy.com/store" target="_blank" rel="noopener" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Courses</a></li>
            </ul>
          </div>

          <!-- Support -->
          <div>
            <h3 class="text-white font-semibold text-xs mb-4 uppercase tracking-widest">Support</h3>
            <ul class="space-y-2.5">
              <li><a href="/about" class="text-gray-400 hover:text-red-400 text-sm transition-colors">About</a></li>
              <li><a href="/contact" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Contact</a></li>
              <li><a href="/contributors" class="text-gray-400 hover:text-red-400 text-sm transition-colors">Contributors</a></li>
            </ul>
          </div>
        </div>

        <!-- Bottom bar -->
        <div class="border-t border-red-500/10 pt-6 flex flex-col md:flex-row items-center justify-between gap-3">
          <p class="text-gray-500 text-sm">&copy; {new Date().getFullYear()} Sailor Success. All rights reserved.</p>
          <p class="text-gray-600 text-xs">Made with ‚ù§Ô∏è for seafarers worldwide</p>
        </div>
      </div>
    </footer>

    <!-- Floating CTA Stack: Ask SailorGPT + Talk to Chief -->
    <div class="fixed bottom-6 right-6 z-50 flex flex-col gap-3 items-end">
      <!-- Ask SailorGPT -->
      <a
        href="https://sailorsuccess.graphy.com/talk/mentor"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-4 py-3 bg-gray-900/90 hover:bg-gray-800/90 backdrop-blur-xl border border-red-500/30 hover:border-red-500/60 text-white text-sm font-semibold rounded-2xl shadow-lg shadow-black/40 transition-all duration-300 hover:-translate-y-0.5 group"
        title="Ask SailorGPT"
      >
        <span class="text-lg">üåê</span>
        <span class="text-gray-100 group-hover:text-white">Ask SailorGPT</span>
        <span class="absolute -top-1 -right-1 flex h-4 w-4">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-500 opacity-60"></span>
          <span class="relative inline-flex rounded-full h-4 w-4 bg-red-600 text-white text-[9px] font-bold items-center justify-center">AI</span>
        </span>
      </a>

      <!-- Talk to Chief (WhatsApp) -->
      <a
        href="https://wa.me/919958110235?text=help%20me%20chief"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-4 py-3 bg-green-600 hover:bg-green-500 text-white text-sm font-semibold rounded-2xl shadow-lg shadow-green-900/40 transition-all duration-300 hover:-translate-y-0.5"
        title="Talk to Chief on WhatsApp"
      >
        <span class="text-lg">üí¨</span>
        <span>Talk to Chief</span>
      </a>
    </div>

    <!-- Search + Enhancement Script -->
    <script src="/ss-enhance.js" defer></script>
  </body>
</html>
