---
export interface Props {
  tags: string[];
}

const { tags } = Astro.props as Props;
---

<div class="mt-8">
  <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Tags</h3>
  <div class="flex flex-wrap gap-2">
    {tags.map(tag => (
      <a
        class="px-3 py-1 text-sm bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full hover:underline"
        href={`/search/?q=${encodeURIComponent(tag)}`}
        aria-label={`Search articles tagged ${tag}`}>
        {tag}
      </a>
    ))}
  </div>
</div>
