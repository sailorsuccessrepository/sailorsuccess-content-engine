---
export interface Article {
  slug: string;
  collection: string;
  data: any;
}

export interface Props {
  articles: Article[];
  heading?: string;
}

const { articles, heading = 'Continue Reading' } = Astro.props as Props;
---

<section class="mt-12 border-t pt-8">
  <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-gray-100">{heading}</h3>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {articles.map(a => (
      <article class="p-4 bg-white dark:bg-gray-800 rounded shadow-sm">
        <a href={`/${a.collection}/${a.slug}/`} class="block">
          <h4 class="font-semibold text-gray-900 dark:text-gray-100">{a.data.title}</h4>
          <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">{a.data.description}</p>
        </a>
      </article>
    ))}
  </div>
</section>
